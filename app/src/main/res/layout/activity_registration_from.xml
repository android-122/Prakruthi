<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegistrationFrom"
    android:background="@drawable/registrationform">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        />

 <RelativeLayout
     android:layout_width="410dp"
     android:layout_height="606dp"
     android:layout_alignParentBottom="true"
     android:background="@drawable/custom_shape_registrationform"
     >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="REGISTRATION FORM"
         android:textColor="@color/black"
         android:textSize="24dp"
         android:fontFamily="@font/coda"
         android:layout_marginTop="27dp"
         android:layout_centerHorizontal="true"
         android:id="@+id/Registration_form_text"
         />

     <EditText
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:layout_marginStart="26dp"
         android:layout_marginEnd="26dp"
         android:background="@drawable/custom_edit_text"
         android:id="@+id/edittext_full_name"
         android:layout_below="@+id/Registration_form_text"
         android:layout_marginTop="14dp"
         android:hint="Full Name"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:textSize="14dp"
         android:paddingStart="15dp"
         android:singleLine="true"
         />

     <EditText
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:layout_marginStart="26dp"
         android:layout_marginEnd="26dp"
         android:background="@drawable/custom_edit_text"
         android:id="@+id/edittext_phone_number"
         android:layout_below="@+id/edittext_full_name"
         android:layout_marginTop="14dp"
         android:hint="Phone Number"
         android:inputType="number"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:textSize="14dp"
         android:paddingStart="15dp"
         android:singleLine="true"
         />

     <EditText
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:layout_marginStart="26dp"
         android:layout_marginEnd="26dp"
         android:background="@drawable/custom_edit_text"
         android:id="@+id/edittext_email_address"
         android:layout_below="@+id/edittext_phone_number"
         android:layout_marginTop="14dp"
         android:hint="Email Address"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:textSize="14dp"
         android:paddingStart="15dp"
         android:singleLine="true"
         />

     <EditText
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:layout_marginStart="26dp"
         android:layout_marginEnd="26dp"
         android:background="@drawable/custom_edit_text"
         android:id="@+id/edittext_pass_word"
         android:layout_below="@+id/edittext_email_address"
         android:layout_marginTop="14dp"
         android:hint="Password"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:textSize="14dp"
         android:paddingStart="15dp"
         android:singleLine="true"
         />


     <com.skydoves.powerspinner.PowerSpinnerView
         android:layout_width="139dp"
         android:layout_height="44dp"
         android:layout_below="@+id/edittext_pass_word"
         android:id="@+id/State_DropDown"
         android:layout_marginStart="26dp"
         android:layout_marginTop="14dp"
         android:layout_marginEnd="195dp"
         android:background="@color/white"
         android:hint="State"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:textSize="14dp"
         app:spinner_item_height="46dp"
         android:paddingStart="15dp"
         android:gravity="center_vertical"
         app:spinner_item_array="@array/dropdown_State"
         app:spinner_arrow_show="true"
         app:spinner_popup_max_height="120dp"
         app:spinner_divider_color="@color/black"
         app:spinner_arrow_tint="@color/black"
         />

     <com.skydoves.powerspinner.PowerSpinnerView
         android:layout_width="139dp"
         android:layout_height="44dp"
         android:layout_below="@+id/edittext_pass_word"
         android:id="@+id/District_DropDown"
         android:layout_marginTop="14dp"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="26dp"
         android:background="@color/white"
         android:hint="State"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:textSize="14dp"
         app:spinner_item_height="46dp"
         android:paddingStart="15dp"
         android:gravity="center_vertical"
         app:spinner_item_array="@array/dropdown_District"
         app:spinner_arrow_show="true"
         app:spinner_popup_max_height="120dp"
         app:spinner_divider_color="@color/black"
         app:spinner_arrow_tint="@color/black"
         />

     <EditText
         android:layout_width="match_parent"
         android:layout_height="43dp"
         android:background="@drawable/custom_edit_text"
         android:layout_below="@id/State_DropDown"
         android:layout_marginTop="14dp"
         android:layout_marginStart="26dp"
         android:layout_marginEnd="26dp"
         android:hint="City"
         android:paddingStart="15dp"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:id="@+id/Edittext_City"
         android:singleLine="true"
         />

     <com.skydoves.powerspinner.PowerSpinnerView
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:layout_below="@+id/Edittext_City"
         android:id="@+id/Type_DropDown"
         android:layout_marginTop="14dp"
         android:layout_marginStart="26dp"
         android:layout_marginEnd="26dp"
         android:background="@color/white"
         android:hint="Type"
         android:textColorHint="#61000000"
         android:textColor="#61000000"
         android:textSize="14dp"
         app:spinner_item_height="46dp"
         android:paddingStart="15dp"
         android:gravity="center_vertical"
         app:spinner_item_array="@array/Type"
         app:spinner_arrow_show="true"
         app:spinner_popup_max_height="120dp"
         app:spinner_divider_color="@color/black"
         app:spinner_arrow_tint="@color/black"
         />

     <CheckBox
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_below="@id/Type_DropDown"
         android:text="I accpet Terms and Condition..!"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:textColor="@color/white"
         android:id="@+id/checkbox"
         />

     <androidx.appcompat.widget.AppCompatButton
         android:layout_width="203dp"
         android:layout_height="40dp"
         android:background="@drawable/custom_shape_btn"
         android:layout_below="@+id/checkbox"
         android:layout_centerHorizontal="true"
         android:text="Send OTP"
         android:textColor="@color/black"
         android:id="@+id/send_OTP_btn"
         android:fontFamily="@font/ibarra_real_nova"
         android:textAllCaps="false"
         android:textSize="20dp"
         />
     





 </RelativeLayout>




</RelativeLayout>