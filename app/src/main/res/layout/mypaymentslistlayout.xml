<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@drawable/custom_edit_text"
    android:backgroundTint="#C6E4FF"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/myPaymentslistlayoutbackground"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/baseline_circle_24"
        android:id="@+id/MyPaymentsProductImage"
        />

    <TextView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:text="Plastic Glass"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_toEndOf="@id/MyPaymentsProductImage"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:id="@+id/MyPaymentsProductName"
        android:translationY="-8dp"
        />

    <TextView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:text="Sub information"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_below="@id/MyPaymentsProductName"
        android:layout_toEndOf="@id/MyPaymentsProductImage"
        android:layout_marginStart="@dimen/_5sdp"
        android:id="@+id/MyPaymentsProductSubInformation"
        android:translationY="-8dp"/>


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_toEndOf="@id/MyPaymentsProductSubInformation"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_90sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:id="@+id/MyPaymentsProductNextBtn"
        android:src="@drawable/star_vector"

        android:background="#545F9E62"
        />



</RelativeLayout>

