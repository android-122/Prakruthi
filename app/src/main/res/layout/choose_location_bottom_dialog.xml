<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_gps_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your location"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_location_bottom_dialog_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        tools:listitem="@layout/choose_location_bottom_dialog_recycler"
        tools:itemCount="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:text="User my current location"
        android:textStyle="bold"
        android:id="@+id/choose_location_bottom_dialog_choose_current_location" />
</LinearLayout>
