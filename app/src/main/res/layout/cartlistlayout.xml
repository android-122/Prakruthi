<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_20sdp">


    <LinearLayout
        android:id="@+id/Plastic_Glass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/cart_RelativeLayout"
        android:layout_marginStart="02dp"
        android:layout_marginEnd="02dp"
        android:background="@drawable/button_bg_curve"
        android:backgroundTint="@color/Secondary_less"

        android:orientation="horizontal"

        >

        <RelativeLayout
            android:id="@+id/card_image"
            android:layout_width="10sp"
            android:layout_height="100dp"
            android:layout_weight="0.7"
            android:paddingLeft="05dp"


            >

<!--            <com.google.android.material.imageview.ShapeableImageView-->
<!--                android:id="@+id/iv_profile_img"-->
<!--                android:src="@drawable/milkshake"-->
<!--                android:layout_width="@dimen/_60sdp"-->
<!--                android:layout_height="@dimen/_60sdp"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginLeft="02dp"-->
<!--                android:paddingTop="30dp"-->
<!--                android:paddingBottom="20dp"-->
<!--                android:scaleType="fitXY"-->
<!--                app:shapeAppearanceOverlay="@style/circleImageViewStyle" />-->


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                android:src="@drawable/milkshake"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="01dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"

            >

            <LinearLayout
                android:id="@+id/ll_site_visit_req_LastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Plastic Glass"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/txt_sub_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Sub information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="02dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_5sdp"

            >

            <LinearLayout
                android:id="@+id/ll_site_visit_req_LastUpdated2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_plus_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/adddateicon" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_site_visit_req_LastUpdated3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_site_visit_req_LastUpdated32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_plus_btn2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/adddateicon" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/maines_plus_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_maines_btn"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="$3,237"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/delete_layout"
            android:layout_width="01dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.3"
            android:layout_toRightOf="@+id/Plastic_Glass"
            >


            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="top"
                android:src="@drawable/ic_delete" />
        </LinearLayout>


        />


    </LinearLayout>


</LinearLayout>