<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_background"
    tools:context=".ui.Login">
    
    <ImageView
        android:layout_width="186dp"
        android:layout_height="167dp"
        android:src="@drawable/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:id="@+id/Login_Logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Login to your account"
        android:layout_below="@+id/Login_Logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ibarra_real_nova"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:id="@+id/logintext"
        />

    <EditText
        android:id="@+id/edittext_user_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edit_text"
        android:backgroundTint="@color/Primary"
        android:layout_below="@+id/logintext"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="23dp"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/personicon"
        android:singleLine="true"
        android:drawablePadding="5dp"
        />


    <EditText
        android:id="@+id/edittext_login_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edit_text"
        android:backgroundTint="@color/Primary"
        android:layout_below="@+id/edittext_user_name"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="23dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/vector"
        android:singleLine="true"
        android:drawablePadding="5dp" />

    <TextView
        android:id="@+id/forget_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Forget_password"
        android:textColor="@color/Primary_less"
        android:textSize="14dp"
        android:layout_below="@+id/edittext_login_password"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        />

    q<androidx.appcompat.widget.AppCompatButton
        android:layout_width="191dp"
        android:layout_height="40dp"
        android:id="@+id/login_btn"
        android:layout_below="@+id/forget_password_login"
        android:background="@drawable/custom_shape_btn"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textAllCaps="false"
        android:fontFamily="@font/ibarra_real_nova"
        android:textSize="20dp"
        android:drawableEnd="@drawable/baseline_login_24"
        android:paddingEnd="50dp"
        android:gravity="end|center_vertical"
        android:textStyle="bold"
        android:drawablePadding="2dp"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Don't have an account?"
        android:id="@+id/dont_have_account_login"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="33dp"
        android:layout_marginStart="90dp"/>

    <TextView
        android:id="@+id/register_an_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Register_an_account"
        android:textColor="@color/Primary_less"
        android:textSize="14dp"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/dont_have_account_login"
        />



</RelativeLayout>