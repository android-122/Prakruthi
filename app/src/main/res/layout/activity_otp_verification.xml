<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otp_verification"
    tools:context=".ui.OTP_Verification">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn_otp"
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/baseline_arrow_back_24" />


    <TextView
        android:id="@+id/txt_otp_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_btn_otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="249dp"
        android:fontFamily="@font/ibarra_real_nova"
        android:text="OTP VERIFICATION"
        android:textColor="@color/black"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txt_otp_sent_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_otp_verification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/ibarra_real_nova"
        android:text="Enter the OTP Send to +91 9032757020\n"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/tv_resend_otp_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_otp_sent_to"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:text="00:45"
        android:textColor="@color/black"

        />

    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_resend_otp_timer"
        app:cursorVisible="false"
        app:forceKeyboard="true"
        app:hint="0"
        app:inputType="text"
        app:password="false"
        app:pinBackground="@drawable/example_drawable"
        app:pinHeight="40dp"
        app:pinLength="4"
        app:pinWidth="40dp" />

    <LinearLayout
        android:id="@+id/login_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_horizontal"

        android:layout_below="@+id/pinview"
        >


        <TextView
            android:id="@+id/txt_receive_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pinview"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Don't receive the code?"
            android:textColor="@color/black"

            android:textSize="12dp"

            />

        <TextView
            android:id="@+id/txt_resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txt_receive_code"
            android:background="@color/white"
            android:text=" Re-Send"
            android:textColor="@color/Purple"

            android:textSize="15dp"

            android:textStyle="bold"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="191dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_shape_btn"
        android:drawableEnd="@drawable/baseline_login_24"
        android:drawablePadding="2dp"
        android:fontFamily="@font/ibarra_real_nova"
        android:gravity="end|center_vertical"
        android:paddingEnd="50dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold" />


